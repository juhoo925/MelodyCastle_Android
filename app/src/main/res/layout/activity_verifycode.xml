<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".VerifyCodeActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/verify_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/verify_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_verify_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <AutoCompleteTextView
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:autofillHints="your email address"
                android:singleLine="true"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/vcode"
                android:hint="@string/prompt_verifycode"
                android:imeActionId="6"
                android:imeActionLabel="@string/action_verify_short"
                android:imeOptions="actionUnspecified"
                android:inputType="numberDecimal"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:autofillHints="vcode"
                android:singleLine="true"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/send_button"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="@string/action_verify"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>